<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:background="@drawable/back"
        android:text="You are about to enter PIN input phase" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@drawable/back"
        android:text="During the PIN input phase the microphone will begin recording and You will be instructed to Enter 10 4-Digit Pins" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/textView8"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/back"
        android:text="Press the Button below to proceed" />

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="confirmed"
        android:text="Proceed" />
</LinearLayout>